<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Rectangle -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#66FFFFFF" /> <!-- 40% opacity white -->
            <corners android:radius="10dp" />
        </shape>
    </item>
    <!-- Gradient Overlay -->
    <item android:right="3dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="3dp"
                android:color="#80FFFFFF" /> <!-- 50% opacity white -->
        </shape>
    </item>
    <item android:left="3dp" android:top="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="3dp"
                android:color="#00FF48DB" /> <!-- 100% opacity #FF48DB -->
        </shape>
    </item>
</layer-list>
